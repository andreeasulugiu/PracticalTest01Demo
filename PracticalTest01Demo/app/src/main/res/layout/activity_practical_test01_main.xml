<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_practical_test01_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="practicaltest01.eim.systems.cs.pub.ro.practicaltest01demo.PracticalTest01MainActivity">

    <Button
        android:id="@+id/go_to_activity_button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/navigate"/>

    <TextView
        android:id="@+id/first_text"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_alignParentLeft="true"
        android:textAlignment="center"
        android:saveEnabled="false"/>

    <Button
        android:id="@+id/first_button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_text"
        android:text="@string/press_me"/>

    <TextView
        android:id="@+id/second_text"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_alignParentRight="true"
        android:textAlignment="center"
        android:saveEnabled="false"/>

    <Button
        android:id="@+id/second_button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_text"
        android:layout_alignParentRight="true"
        android:text="@string/press_me_too"/>
</RelativeLayout>
